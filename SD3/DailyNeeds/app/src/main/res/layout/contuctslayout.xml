<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/settings_2">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contacts"
            android:fontFamily="@font/action_man_shaded"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="@color/light_1"/>
    </Toolbar>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/contacts_radiobuton_cr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CR's"
            android:textSize="20sp"
            android:textColor="@color/light_1"
            android:buttonTint="@color/light_1"
            android:onClick="contucts_radiobutton" />

        <RadioButton
            android:id="@+id/contacts_radiobuton_teacher"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:textSize="20sp"
            android:buttonTint="@color/light_1"
            android:textColor="@color/light_1"
            android:onClick="contucts_radiobutton"/>

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--contacts -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>
