<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/MidnightBlue"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:fontFamily="@font/action_man_shaded_italic"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/DarkRed"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Made By:"
        android:fontFamily="@font/action_man_shaded"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/dark_1"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="1. Saiful Islam Sakib."
        android:fontFamily="@font/action_man_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/dark_1"
        android:layout_marginStart="100dp"
        android:text="2. Mahedee Hasan."
        android:fontFamily="@font/action_man_bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="-->powered by android and firebase"
        android:gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/action_man"
        android:textColor="@color/Black"/>

</LinearLayout>
