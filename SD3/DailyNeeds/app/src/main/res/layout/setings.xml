<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_2"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="Suspicious0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Settings"
            android:fontFamily="@font/action_man_shaded"
            android:textColor="@color/light_1"
            android:gravity="center"
            android:textSize="50sp"
            android:padding="10dp"/>

    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Id:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/action_man_bold"
            android:textColor="@color/light_1"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/settings_et_id"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:hint="ex: 160104017"
            android:textColor="@color/light_1"
            android:textColorHint="@color/Gray"
            android:background="@drawable/custom_text_field"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="12"
            android:ellipsize="end"
            android:digits="0123456789."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Section:"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/action_man_bold"
            android:textColor="@color/light_1"
            android:layout_margin="10dp" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <RadioButton
                android:id="@+id/settings_radiobtn_A"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=" A"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/action_man_bold"
                android:textColor="@color/light_1"
                android:buttonTint="@color/light_1"
                android:onClick="section_selection"/>

            <RadioButton
                android:id="@+id/settings_radiobtn_B"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=" B"
                android:fontFamily="@font/action_man_bold"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:textColor="@color/light_1"
                android:buttonTint="@color/light_1"
                android:onClick="section_selection"/>

            <RadioButton
                android:id="@+id/settings_radiobtn_C"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=" C"
                android:fontFamily="@font/action_man_bold"
                android:textSize="20sp"
                android:textColor="@color/light_1"
                android:buttonTint="@color/light_1"
                android:onClick="section_selection"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Semester:"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/action_man_bold"
            android:textColor="@color/light_1"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/settings_et_semester"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/light_1"
            android:hint="ex: 1.1"
            android:textColorHint="@color/Gray"
            android:background="@drawable/custom_text_field"
            android:maxLines="1"
            android:maxLength="3"
            android:ellipsize="end"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Department:"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/action_man_bold"
            android:textColor="@color/light_1"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/settings_et_department"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textColor="@color/light_1"
            android:hint="ex: CSE"
            android:textColorHint="@color/Gray"
            android:background="@drawable/custom_text_field"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="5"
            android:ellipsize="end"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/action_man_bold"
            android:textColor="@color/light_1"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/settings_et_contactNumber"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:text="+880"
            android:textColor="@color/light_1"
            android:background="@drawable/custom_text_field"
            android:maxLines="1"
            android:maxLength="14"
            android:ellipsize="end"
            android:inputType="phone"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:background="@drawable/custom_button"
        android:text="Save"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:onClick="setings_save_button"/>

</LinearLayout>
