
@{
    ViewBag.Title = "homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(Session["userName"] != null)
{
    <!DOCTYPE html>
    <html>

        <head>
            <meta charset="utf-8">
            <title>Test Ground</title>
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        </head>

        <body>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-4 col-xs-12">
                        <div class="row">
                            <div class="col-lg-2">
                                <img src="~/Content/img/logo.png" alt="logo">

                            </div>
                            <div class="col-lg-10">
                                <h4 class="mt-3 text-secondary text-monospace">Renaissance</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-xs-12 ">
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>
                    <div class="col-lg-4 col-xs-12">
                        <label for="">Welcome @Session["userName"].ToString()</label>
                        <input type="button" class="text-white ml-3 btn btn-secondary" value="Go to Profile" />
                        <input type="button" class="text-white ml-3 btn btn-secondary" value="Sign Out" onclick="location.href='@Url.Action("SignOut","Home")'" />
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-4 col-xs-12">

                    <div class="container-fluid border-left-0">
                        <h2 class="text-secondary text-monospace"><i class="fas fa-star"></i> &nbsp;Interests </h2>

                    </div>

                </div>
                <div class="col-lg-4 col-xs-12">


                </div>
                <div class="col-lg-4 col-xs-12">



                </div>

            </div>


        </body>

    </html>

}
