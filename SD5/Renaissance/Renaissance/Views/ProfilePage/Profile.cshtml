@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "profilePage";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <!--logo-->
                <div class="navbar-header">
                    <a href="/Home/Index"><img src="~/Content/img/logo.png" class="navbar-brand" alt="Educational Blog"></a>
                </div>
                <!--options-->
                <div>
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="/Home/Index">Home</a></li>
                        <li><a href="#aboutsite">About</a></li>
                        <li><a href="#devcontact">Contact</a></li>
                    </ul>
                </div>

                <!--droup down menue-->
                <div class="navbar navbar-nav navbar-right">
                    <ul class="nav navbar-nav">
                        <li><a href="/ProfilePage/Profile">User Name</a></li>
                        <li><a href="#">Sign Out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            <!--information-->
            <div class="col-md-3" style="background-color: white; margin: 1%; border-radius: 5px;">
                <h1 align="center">My Profile</h1>
                <p align="center">
                    <img src="~/Content/img/logo.png" class="img-circle img-thumbnail" alt="user image" style="width: 40%; height: 100px;">
                </p>
                <hr>
                <p>
                    <h5>
                        <i class="glyphicon glyphicon-user"></i>
                        <!--name of the user from database-->
                    </h5>
                </p>
                <p>
                    <h5>
                        <i class="glyphicon glyphicon-envelope"></i>
                        <!--email of the user from database-->
                    </h5>
                </p>
                <hr>
                <p>
                    <h5>
                        <i class="glyphicon glyphicon-share-alt"></i> Total Blog: <span class="label label-info">
                            <!--total blog of the user from database-->
                        </span>
                    </h5>
                </p>
                <p>
                    <h5>
                        <i class="glyphicon glyphicon-share-alt"></i> Total Quiz Attemped: <span class="label label-info">
                            <!--total quiz from database-->
                        </span>
                    </h5>
                </p>
            </div>

            <!--edit information-->
            <div class="col-md-8" style="background-color: white; margin: 1%; border-radius: 5px;">
                <!--blogs-->
                <div class="text-center">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
                    {
                        <ul>
                            @Html.TextBox("id", ViewBag.CurrentFilter as string)
                            <input type="submit" value="Search" />
                        </ul>
                    }
                </div>
                <div>
                    @{int total = 10; // total number of blog
                    <ul>
                        @for (int i = 0; i < total; i++)
                        {
                            <input type="button" value="X" />
                            <li class="list-group-item" style="margin-bottom : 20px;">
                                <br />
                                <a href="#@i" style="color : black; text-decoration : none">
                                    Title :
                                    <br />
                                    Category :
                                    <br />
                                    Tag :

                                    <hr />
                                    Post :
                                </a>
                            </li>
                        }
                    </ul>
                    }
                </div>
        </div>
    </div>

    <div class="jumbotron jumbotron-fluid mt-5">
        <div class="container">
            <h1 class="display-4">Help Share Discuss Grow </h1>
            <p class="lead">Learn about anything .</p>
            <p> Copyright &copy; 2019 Renaissance Education </p>
        </div>
    </div>
</body>
</html>
